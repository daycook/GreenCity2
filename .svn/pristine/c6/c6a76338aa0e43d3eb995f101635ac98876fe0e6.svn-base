	height: 80px;
	padding-top: 25px;
	font-size: 19px;
	color:white;
	background-color: #364679; 
	/* background: url(/images/front/leftBg.jpg) no-repeat 0 0; */
}

.side-menubar li{
	padding:0px;
	list-style:none;
}

.side-menubar li a{
	/* background: rgb(109,109,109); */
	color:#504f4f;
	display:block;
	font-weight:normal;
	line-height:50px;
	margin:0px;
	padding:0px 25px;
	text-align:center;
	text-decoration:none;
	border-bottom: 2px solid #1a2548;
}
.side-menubar li a:HOVER{
	/* background: #575757; */
	color: black;
	font-weight:bolder;
	border-bottom: 3px solid #1a2548;
}

