/*기본 테이블*/

.baseTableCont{
	height:100%;
	width: 98%;
	margin: auto;
	min-height: 600px;
	margin-top: 20px;
}

.baseTable{
	width: 1630px;
	margin: auto;
	/* border: 2px solid #e4e4e4; */
	background-color: white;
}
.baseTable tbody tr{
	background-color: white;
}

.baseTable tbody tr:HOVER{
	background-color: #e1e1ea;
	cursor: pointer;
}

.baseTable th{
	/* background-color: #e5e5e557; */
	color: #000;
	text-align: center;
	height: 40px;
	border-top: 3px solid #1a2548;
	border-bottom: 1px solid #1a2548;
}
.baseTable td{
	height: 40px;
	padding-left: 5px;
	border-bottom: 1px solid #d3d3d3;
}

.baseTable td a{
	color: black;
	cursor: pointer;
}


.subComtTableCont{
	height:100%;
	width: 90%;
	margin: auto;
	min-height: 600px;
	margin-top: 20px;
}

.subComtTable{
	width: 100%;
	margin: auto;
	/* border: 2px solid #e4e4e4; */
}

.subComtTable tbody tr{
	background-color: white;
}

.subComtTable th{
	color: #FFF;
	text-align: center;
	height: 40px;
	border-top: 3px solid #1a2548;
	border-bottom: 1px solid #1a2548;
	background-color: #364679;
}
.subComtTable td{
	height: 40px;
	padding-left: 5px;
	border-bottom: 1px solid #d3d3d3;
}

.subComtTable td a{
	color: black;
	cursor: pointer;
}

#insertTable tbody th{
	background-color: #ffffff;
	color: black;
	border-top: 0px;
	border-bottom: 1px solid #d3d3d3;
}

/*준비중 화면*/

.preparing{
	min-height: 700px;
	width: 100%; 
	text-align: center;
}

.preparing img{
	width: 60%;
	margin: auto;
}

.preparing a{ 
	color: #ffffff;
	line-height: 700px;
	font-size: 50px;
}

