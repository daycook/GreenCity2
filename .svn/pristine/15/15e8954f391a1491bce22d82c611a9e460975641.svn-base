/* 탭 전체 스타일 */
.tabs {
  background-color: #eeeff5;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  width: 200px;}

/* 탭 스타일 */
.tab_item {
  width: calc(100%/2);
  height: 40px;
  /* border-bottom: 3px solid #333333; */
  background-color: #eeeff5;
  line-height: 40px;
  font-size: 13px;
  text-align: center;
  color: #333333;
  display: block;
  float: left;
  text-align: center;
  font-weight: bold;
  transition: all 0.2s ease;
}
.tab_item:hover {
  opacity: 0.75;
}

/* 라디오 버튼 UI삭제*/
input[name="tab_item"] {
  display: none;
}

/* 탭 컨텐츠 스타일 */
.tab_content {
  display: none;
  padding: 40px 40px 0;
  clear: both;
  overflow: hidden;
}

/* 선택된 탭 스타일 */
.tabs input:checked + .tab_item {
  background-color: #364679;
  color: #fff;
}